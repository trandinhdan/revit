<Window x:Class="Week2.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Week2.Converters"
        Title="Tạo Thiết Bị Điện" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:BooleanToInvertedBooleanConverter x:Key="BooleanToInvertedBooleanConverter"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="25"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Chọn loại thiết bị điện:" 
                   FontWeight="Bold" FontSize="14"/>

        <ComboBox Grid.Row="1" 
                  ItemsSource="{Binding AvailableEquipments}"
                  SelectedValue="{Binding SelectedEquipmentType}"
                  SelectedValuePath="Type"
                  DisplayMemberPath="DisplayName"/>

        <Button Grid.Row="2" Content="Tạo thiết bị" 
                Command="{Binding CreateEquipmentCommand}"
                IsEnabled="{Binding IsCreating, Converter={StaticResource BooleanToInvertedBooleanConverter}}"
                Background="#FF4CAF50" Foreground="White"
                FontWeight="Bold"/>

        <Button Grid.Row="3" Content="Đóng" 
                Click="CloseButton_Click"
                Background="#FF9E9E9E" Foreground="White"
                HorizontalAlignment="Right" Width="80"/>
    </Grid>
</Window>